{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./types",
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "./src/components/**/*.vue",
    "./src/components/**/*.ts",
    "./src/composables/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./types",
    "./generator",
    "./**/*.stories.ts"
  ]
}
