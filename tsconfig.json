{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "verbatimModuleSyntax": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "react": ["./stub/types__react"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.vue",
    "./stub/**/*.d.ts"
  ],
  "vueCompilerOptions": {
    "plugins": [
      "@vue/language-plugin-pug"
    ]
  }
}
