{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "./.storybook/**/*.ts",
    "./composables/**/*.ts",
    "./components/**/*.vue",
    "./components/**/*.ts",
    "./generator/**/*.ts",
    "./exports/**/*.ts"
  ],
  "vueCompilerOptions": {
    "plugins": [
      "@volar/vue-language-plugin-pug"
    ]
  }
}
