@import './reset'
@import './fonts'

:root
	--color-blue: #0A84FF
	--color-black: #000000
	--color-red-08: #cc2626
	--color-white-005: #0C0C0C
	--color-white-01: #191919
	--color-white-02: #333333
	--color-white-03: #4C4C4C
	--color-white-04: #666666
	--color-white-05: #808080
	--color-white-09: #E5E5E5
	--font-size-body: 15px
	--line-height-body: 1.3334

html
	font-family: 'Inter', Helvetica, Arial, sans-serif
	line-height: var(--line-height-body)
	font-size: var(--font-size-body)
	background: var(--color-black)
	color: var(--color-white-09)
	color-scheme: light dark
	text-size-adjust: 100%

svg
	fill: currentColor

button
	border: none
	outline: none
	font: inherit
	color: inherit
	cursor: pointer
	background: none
	line-height: var(--line-height-body)

h1, h2, h3, h4, h5, h6
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale
